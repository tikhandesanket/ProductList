<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>SKU code</th>
      <th>Name </th>     
      <th>Description</th>
      <th>MGF Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        
        <td><%= link_to product.sku_code , {:action => 'show', :id => product.sku_code} %></td>
        <td><%= product.name %></td>
        <td><%= product.desciption %></td>
        <td><%= product.mgf_date %></td>
        
        <td><%= link_to 'Show', product_path(product) %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-success'%>